{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@stores/*": ["stores/*"],
      "@util/*": ["util/*"],
      "@stores": ["stores"],
      "@types": ["types"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "./pages",
    "./stores",
    "./components",
    "./database",
    "./middleware",
    "./util",
    "./config",
    "./next.config.js",
    "./server.js",
    "./types.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
